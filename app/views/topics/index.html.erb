<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %> <!--ここでトピックを繰り返しdoしている-->
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= link_to '詳細はこちら', topic_path(id: topic.id), class: 'btn btn-block btn-black' %>
            <%= image_tag topic.image.url %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
       <div>
         <%= link_to '投稿ページへ戻る', new_topic_path, class: 'btn btn-block btn-black' %>
       </div> 
  </div>
</div>
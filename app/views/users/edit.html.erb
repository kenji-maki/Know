<h1>ユーザー情報の編集ページです</h1>

<div class="users-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center text-white">Log in</h1>

  　　　　<%= form_for (current_user) do |f| %>
    　　 　　 <div class="form-group">
     　　　     <%= f.label :name, class: "text-white" %>
         　　　 <%= f.text_field :name, class: "form-control" %>
    　　   　 </div>
           <div class="form-group">
             <%= f.label :email, class: "text-white" %>
             <%= f.text_field :email, class: "form-control" %>
           </div>
           <div class="form-group">
             <%= f.label :紹介文, class: "text-white" %>
             <%= f.text_field :introduction, class: "form-control" %>
           </div>
             <%= f.submit "決定", class: "btn-block btn-white" %>
        <% end %>
        
        </div>
      </div>
    </div>
  </div>
